{
  "name": "edaq-assistant",
  "displayName": "EDA-Q Assistant",
  "description": "AI assistant for EDA-Q quantum chip design",
  "version": "0.2.0",
  "publisher": "edaq-team",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "quantum",
    "chip design",
    "AI assistant",
    "EDA-Q"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "edaq.openChat",
        "title": "EDA-Q: Open AI Assistant",
        "icon": "$(comment-discussion)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "edaq-assistant",
          "title": "EDA-Q Assistant",
          "icon": "$(circuit-board)"
        }
      ]
    },
    "views": {
      "edaq-assistant": [
        {
          "type": "webview",
          "id": "edaq.chatView",
          "name": "AI Chat"
        }
      ]
    },
    "configuration": {
      "title": "EDA-Q Assistant",
      "properties": {
        "edaq.language": {
          "type": "string",
          "default": "zh-CN",
          "enum": [
            "zh-CN",
            "en-US"
          ],
          "enumDescriptions": [
            "简体中文",
            "English"
          ],
          "description": "界面语言 / Interface Language"
        },
        "edaq.qwenApiKey": {
          "type": "string",
          "default": "",
          "description": "阿里云千问 API Key (必填) / Alibaba Qwen API Key (Required)",
          "markdownDescription": "获取API Key: [阿里云控制台](https://dashscope.console.aliyun.com/apiKey) / Get API Key: [Alibaba Cloud Console](https://dashscope.console.aliyun.com/apiKey)"
        },
        "edaq.qwenModel": {
          "type": "string",
          "default": "qwen-plus",
          "enum": [
            "qwen-plus",
            "qwen-turbo",
            "qwen-max"
          ],
          "enumDescriptions": [
            "平衡版 - 性价比最高 (推荐) / Balanced - Best cost-effectiveness (Recommended)",
            "快速版 - 响应更快，成本更低 / Fast - Faster response, lower cost",
            "增强版 - 能力最强，成本较高 / Enhanced - Most powerful, higher cost"
          ],
          "description": "千问模型版本 / Qwen Model Version"
        },
        "edaq.enableContextFromEditor": {
          "type": "boolean",
          "default": true,
          "description": "自动读取编辑器中的代码作为上下文 / Automatically read code from editor as context"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "echo \"No tests yet\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "eslint": "^8.50.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/edaq-assistant"
  },
  "bugs": {
    "url": "https://github.com/your-org/edaq-assistant/issues"
  },
  "homepage": "https://github.com/your-org/edaq-assistant#readme",
  "license": "MIT",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  }
}
